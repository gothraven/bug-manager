{
  "name": "core-api",
  "version": "1.0.0",
  "description": "core-api is the main api for the app front",
  "main": "src/index.js",
  "author": "ZAGHBANE Safiy Errahmane",
  "license": "ISC",
  "scripts": {
    "start": "nodemon --exec babel-node ./src/index.js",
    "lint": "eslint 'src/**/*.js' --fix",
    "format": "prettier-eslint 'src/**/*.{js,json}' --write",
    "test": "cross-env NODE_ENV=developement nyc --reporter=text mocha --timeout 20000 --recursive src/api/tests",
    "populate:basic": "babel-node ./populate.db.js",
    "populate:full": "babel-node ./populate.db.js --full"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "express",
    "graphql",
    "api",
    "node",
    "es7"
  ],
  "dependencies": {
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.0",
    "cors": "^2.8.3",
    "dataloader": "^1.4.0",
    "dotenv-safe": "^6.0.0",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "graphql-resolvers": "^0.3.3",
    "graphql-scalars": "^1.0.4",
    "graphql-yoga": "^1.18.3",
    "http-status": "^1.0.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-simple": "0.5.6",
    "lodash": "^4.17.21",
    "merge-graphql-schemas": "^1.7.3",
    "moment-timezone": "^0.5.13",
    "mongoose": "^5.7.13",
    "morgan": "^1.8.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "faker": "^4.1.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.4.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^14.1.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "peerDependencies": {
    "eslint": "^4.9.0"
  }
}
